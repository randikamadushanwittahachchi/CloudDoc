@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> userManager
@using CloudDoc.ViewModels
@model DocumentViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="">
    <h4 class="text-muted text-center">Document Edit</h4>
    <div>
        <form asp-controller="Document" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="form-label"></label>
                <textarea asp-for="Content" class="form-control" id="tiny" style="height:100px"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="d-none" asp-for="UserId" value="@userManager.GetUserId(User)" />
            </div>
            <button class="btn btn-primary mt-2" type="submit" name="sumit">Edit</button>
        </form>
    </div>

</div>