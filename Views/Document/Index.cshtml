@using CloudDoc.ViewModels;
@model List<DocumentViewModel>
@{
    ViewData["Title"] = "Index";
}
<div class=" container mt-4">
    <h3 class="text-center my-2 text-muted">My Document</h3>
    <div class=" mt-3 d-flex flex-column gap-5">
        <!-- create Document Section-->
        <div class=" ">
            <h5 class=" text-muted">Create Document</h5>
            <a asp-controller="Document" asp-action="Create" class="btn btn-outline-primary d-inline-flex flex-row align-items-center gap-1">
                Create
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus" viewBox="0 0 16 16">
                    <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5" />
                    <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5z" />
                </svg>
            </a>
        </div>
        <!-- Document List Section-->
        <div>
            <h5 class=" text-muted">Documents</h5>
            <div class="container">
                <ul class="list-unstyled row row-cols-1 row-cols-sm-2 row-cols-md-4 " >
                    @foreach(var item in Model)
                    {
                        <li class="col" style="width:auto" >
                            <a asp-controller="Document" asp-action="Edit" class="btn btn-secondary d-flex flex-column align-items-center gap-2" >
                                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-file-earmark-text-fill" viewBox="0 0 16 16">
                                    <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1M4.5 9a.5.5 0 0 1 0-1h7a.5.5 0 0 1 0 1zM4 10.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5m.5 2.5a.5.5 0 0 1 0-1h4a.5.5 0 0 1 0 1z" />
                                </svg>
                                @item.Title
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

</div>