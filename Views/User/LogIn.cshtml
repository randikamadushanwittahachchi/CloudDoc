@using CloudDoc.ViewModels
@model UserViewModel
@{
    ViewData["Titel"] = "Log In";
}

<div class=" container">
    <form asp-controller="User" asp-action="LogIn" method="post" >

        <div class=" alert alert-danger">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" });
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-check">
            <input asp-for="RemberMe" class="form-check-input"/>
            <label asp-for="RemberMe" class="form-check-label"></label>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
        <div class=" flex-row gap-1">
            <p>Don't have an account?</p>
            <a asp-controller="User" asp-action="Register" class="btn btn-link">Register</a>
        </div>

    </form>

</div>